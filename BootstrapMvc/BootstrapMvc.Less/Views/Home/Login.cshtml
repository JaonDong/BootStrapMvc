@using System.Web.Optimization

@{
    ViewBag.Title = "Login";
}
<style type="text/css">
    .bitch3,.bitch1,.bitch2 {
        background: red;
    }
    .bitch1 {
        background: cornflowerblue;
    }
    .bitch2 {
        background: yellow;
    }
</style>
<script type="text/javascript">
    $(function () {
        $("#tan").click(function () {
            $("#mymodal").modal("toggle");
        });

        $("#save").click(function () {
            var text = $("#exampleInputEmail1").val();
            $.ajax({
                url: "@(Url.Action("Login"))",
                type: "post",
                data: { "email": text },
                dataType:"Json",
                success: function (data) {
                    if (data.state) {
                        $("#mymodal").modal("toggle");
                    } else {
                        alert("失败");
                    }
                }

            });
        });
    });

</script>
<h2>Login</h2>


<div class="container-fluid">
    <div class="row">
        <div class="col-xs-6 col-sm-4  col-md-3 col-lg-3">111111111111111111111111111</div>
        <div class="col-xs-6 col-sm-4  col-md-3 col-lg-3">222222222222222222222222222</div>
        <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3">333333333</div>
        <div class="col-xs-6  col-sm-4 col-md-3 col-lg-3">444444444</div>
    </div>
    <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-4 bitch3">
            111
            <div class="bitch1">
                <div class="col-xs-6">222</div>
                <div class="col-xs-6">333</div>
            </div>
        </div>
        <div class="col-xs-4 col-sm-4 col-md-4 bitch1">1</div>
        <div class="col-xs-4 col-sm-4 col-md-4 bitch2">1</div>
    </div>
</div>

<button id="tan" class="btn btn-primary" type="button">点击我</button>
<div class="modal" id="mymodal" style="position:absolute;bottom:20px;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">添加新地址</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="exampleInputEmail1">名称</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="地址匿名">
                    </div>
                    <div class="form-group">
                        <label for="country">国家:</label>
                        <select class="form-control" id="country">
                            <option>其他</option>
                            <option>中国</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="province">省份</label>
                        <select class="form-control" id="province">
                            <option>北京</option>
                            <option>上海</option>
                            <option>合肥</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="streetAddress">街道地址</label>
                        <input type="text" class="form-control" id="streetAddress" placeholder="街道地址">
                    </div>
                    <div class="form-group">
                        <label for="zipCode">邮政编码</label>
                        <input type="text" class="form-control" id="zipCode" placeholder="邮政编码">
                    </div>
                    <div class="form-group">
                        <label for="phoneNum">手机号码</label>
                        <input type="text" class="form-control" id="phoneNum" placeholder="手机号码">
                    </div>
                    @*<button onclick="location.reload()" class="btn btn-default">提交</button>*@
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-primary" id="save">保存</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->